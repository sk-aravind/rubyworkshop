<h1>----List of shizz----</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th colspan="2"></th>
	</tr>

	<% @articles.each do |article| %>
		<tr>
			<td><%= article.title %></td>
			<td><%= article.text %></td>
			<th> ------- </th>
			<td><%= link_to 'Show' , article_path(article) %></td>
			<th>  </th>
			<td><%= link_to 'Edit' , edit_article_path(article) %></td>
			<td><%= link_to 'Save your work' , article_path(article), method: :delete, data: {confirm:" Would you like to make a copy?"} %></td>
		</tr>
	<% end %>
</table>
